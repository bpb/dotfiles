
# ~/.colima/default/colima.yaml
# Active overrides (your choices)
vmType: vz          # Apple Virtualization.framework
mountType: virtiofs # Fast file sharing (vz only)
rosetta: true       # Allow x86_64 binaries in arm64 VM

cpu: 4              # Default 2 → 4 for smoother dev
memory: 8           # Default 2 → 8 GiB
disk: 60            # Default 100 → 60 GiB (can only increase later)

runtime: docker     # Keep Docker engine

# --- Reference defaults (commented for future tweaks) -------------------------
# arch: host                     # (x86_64, aarch64, host) — default: host
# hostname: colima               # default: "colima" (or colima-<profile>)
#
# autoActivate: true             # make Docker/K8s contexts active on start
#
# kubernetes:
#   enabled: false               # enable k3s (default: false)
#   # version: v1.xx.x+k3s1      # must match a k3s release
#   # k3sArgs:
#   #   - --disable=traefik
#
# network:
#   address: false               # assign reachable IP (macOS only)
#   dns: []                      # e.g., [8.8.8.8, 1.1.1.1]
#   dnsHosts: {}                 # {example.com: 1.2.3.4}
#   hostAddresses: false
#
# docker: {}                     # maps to dockerd daemon.json (be careful with 'hosts')
# # examples:
# # docker:
# #   insecure-registries:
# #     - myregistry.local:5000
# #   features:
# #     buildkit: true
#
# binfmt: true                   # multi-arch emulation enabled by default
# forwardAgent: false            # don’t forward host SSH agent
# nestedVirtualization: false    # requires M3 + vz
# mountInotify: false            # experimental; propagate file events
#
# cpuType: ""                    # qemu-only; ignored with vz
# provision: []                  # idempotent scripts (system/user) on startup
#
# sshConfig: false               # don’t auto-edit ~/.ssh/config
# sshPort: 0                     # 0 = random port
#
# mounts: []                     # default: $HOME and /tmp/colima writable
# # example:
# # mounts:
# #   - location: ~/secrets
# #     writable: false
#
# diskImage: ""                  # custom VM disk image path
#
# env: {}                        # environment variables inside the VM

